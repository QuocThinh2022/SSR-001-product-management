extends ../../layouts/default.pug 

include ../../mixins/alert.pug

block main 
    +alert-error(3500)

    .container.my-5 
        .row.justify-content-center
            .col-8
                h1.text-center Doi mat khau
                form(
                    action='/user/password/reset'
                    method='POST'
                )
                    .form-group
                        label(for='password') Mat khau moi
                        input(
                            type='password'
                            class='form-control'
                            id='password'
                            name='password'
                            required
                        )
                    .form-group
                        label(for='confirmPassword') Xac nhan mat khau
                        input(
                            type='password'
                            class='form-control'
                            id='confirmPassword'
                            name='confirmPassword'
                            required
                        )
                    .form-group
                        button(
                            type='submit'
                            class='btn btn-primary btn-block'
                        ) Doi mat khau
