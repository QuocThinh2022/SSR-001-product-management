extends ../../layouts/default.pug

include ../../mixins/alert.pug

block main 
    .container.my-5
        .row.justify-content-center
            .col-8
                h1.text-center Nhap ma OTP xac thuc
                form(
                    action='/user/password/otp'
                    method='POST'
                )
                    .form-group
                        label(for='email') Email
                        input(
                            type='email'
                            class='form-control'
                            id='email'
                            name='email'
                            required
                            value=email
                            readonly
