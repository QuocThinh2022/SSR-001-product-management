extends ../../layouts/default.pug

include ../../mixins/alert.pug
include ../../mixins/box-head.pug

block main
    +alert-error(3500)
    
    .container.my-3
        include ../../partials/list-btn-users.pug 
        .row
            .col-12
                +box-head('Danh sach ban be')

        .row(data-users-friend)
            each user in users
                .col-6(user-id=user.id)
                    .box-user
                        .inner-avatar
                            img(
                                src=user.avatar
                                alt=user.fullname
                            )
                        .inner-info
                            .inner-name #{user.fullname}
                            .inner-buttons
                                a(
                                    href=`/chat/${user.roomChatId}`
                                    class='btn btn-sm btn-primary mr-1'
                                ) Nhan tin
                        div(
                            class='inner-status'
                            status=user.statusOnline
                        ) <i class='fa-solid fa-circle'></i>
                            
    block script 
        script(type='module' src='/js/users.js')