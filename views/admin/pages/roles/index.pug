extends ../../layouts/default

include ../../mixins/alert.pug

block main 
    +alert-success(2500)
    +alert-error(3000)
    h1(class='mb-4') Nhom quyen

    .card.mb-3 
        .card-header Danh sach 
        .card-body 
            .row 
                .col-8 
                .col-4.text-right 
                    a(
                        href=`/${prefixAdmin}/roles/create`
                        class='btn btn-outline-success'
                    ) + Them moi

            table(class='table table-hover table-sm')
                thead
                    tr
                        th STT 
                        th Nhom quyen 
                        th Mo ta ngan 
                        th Hanh dong
                tbody 
                    if(roles.length > 0)
                        each role, index in roles 
                            tr 
                                td #{index + 1}
                                td #{role.title}
                                td #{role.description}
                                td 
                                    a(
                                        class='btn btn-secondary btn-sm'
                                        href=`/${prefixAdmin}/roles/detail/${role.id}`
                                    ) Detail 
                                    a(
                                        class='btn btn-warning btn-sm ml-1'
                                        href=`/${prefixAdmin}/roles/edit/${role.id}`
                                    ) Edit 
                                    a(
                                        class='btn btn-danger btn-sm ml-1'
                                    ) Del
                    else 
                        tr 
                            td(colspan='4' class='text-center') Chua co nhom quyen nao duoc tao