extends ../../layouts/default 
include ../../mixins/alert.pug
include ../../mixins/table-tree.pug

block main 
    +alert-success(2500)
    +alert-error(3000)
    h1(class='mb-4') Danh muc san pham 

    .card.mb-3 
        .card-header
            
            .row 
                .col-8  Danh sach 
                .col-4.text-right 
                    a(
                        href=`/${prefixAdmin}/product-categories/create`
                        class='btn btn-outline-success'
                    ) + Create
        .card-body
            
            table(
                class='table table-hover table-sm'
                checkbox-multi
            )
                thead 
                    tr
                        th 
                            input(type='checkbox' name='checkall')
                        th STT 
                        th Hinh anh 
                        th Tieu de 
                        th vi tri
                        th Trang thai 
                        th Hanh dong 
                tbody 
                    if (categories && categories.length > 0)
                        +table-tree(categories)
                    else 
                        tr 
                            td(
                                colspan='8'
                                class='text-center'
                            ) Khong tim thay danh muc nao

    form(
        id='form-change-status'
        method='POST'
        action=``
        data-path=`/${prefixAdmin}/product-categories/change-status`
    )

    form(
        id='form-delete-item'
        method='POST'
        action=``
        data-path=`/${prefixAdmin}/product-categories/delete`
    )
