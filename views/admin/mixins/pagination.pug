
mixin pagination(pagiantion)
    nav 
        ul(class='pagination')
            //- first, pre 
            if (pagination.currentPage > 1)
                li(class='page-item' button-pagination='1')
                    button(class='page-link') <i class="fa-solid fa-angles-left"></i>
                li(class='page-item' button-pagination=(pagination.currentPage - 1))
                    button(class='page-link') <i class="fa-solid fa-angle-left"></i>

            //- number page 
            - for (let i = 1; i <= pagination.totalPage; ++i)
                li(class=`page-item ${pagination.currentPage == i ? 'active':''}`)
                    button(class='page-link' button-pagination=i) #{i}
            
            //- last, next 
            if (pagination.currentPage < pagination.totalPage)
                li(class='page-item' button-pagination=(pagination.currentPage + 1))
                    button(class='page-link') <i class="fa-solid fa-angle-right"></i>
                li(class='page-item' button-pagination=pagination.totalPage)
                    button(class='page-link') <i class="fa-solid fa-angles-right"></i>
            